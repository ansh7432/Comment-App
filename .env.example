# Production Environment Variables
# Copy this file to .env and update the values for production deployment

# Database Configuration (Update with your production database details)
DATABASE_NAME=commentapp_prod
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-super-secure-database-password-here

# JWT Configuration (Generate a secure secret)
JWT_SECRET=your-super-secure-jwt-secret-minimum-256-bits-change-this-now

# Frontend Configuration (Update with your domain)
NEXT_PUBLIC_API_URL=http://localhost:3000/

# Optional: Backup configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
